@model Galaxy.MVC.Authentication.Models.SignUpModel
@if (!ViewContext.ModelState.IsValid)
{
    <div asp-validation-summary="All" class="form-validation"></div>
}

<form class="form-signin" asp-action="SignUp">
    <h2>Por favor registrate</h2>
    <label class="sr-only">Username</label>
    <input type="text" class="form-control" placeholder="Username"
           asp-for="Username" />
    <label class="sr-only">Password</label>
    <input type="password" class="form-control" placeholder="Password"
           asp-for="Password" />
    <label class="sr-only">Repeat Password</label>
    <input type="password" class="form-control" placeholder="Repeat Password"
           asp-for="RepeatPassword" />
    <button class="btn btn-lg btn-block btn-primary" type="submit">
        Registrar
    </button>
</form>